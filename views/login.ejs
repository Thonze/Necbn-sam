<%- include ('./partials/headerlogin') %> 
<section class="center" id="content">
    <div class="container">
        <div class="row">
            <div class="col-md-6 mx-auto">
                <div class="card">
                    <div class="card-header">
                        <h4>
                            Account Login
                        </h4>
                        <div class="card-body">
                            <form method="post" action="/login">
                                <%- include ('./partials/messages') %>
                                <div class="txt_field">
                                        <input type="text" name="email" class="form-control" required>
                                        <span></span>
                                        <label>Email</label>
                                        

                                </div>
                                <div class="txt_field">
                                    <input type="password" name="password" class="form-control" required>
                                    <span></span>
                                    <label>Password</label>
                                </div>
                                <div class="pass"><a href="/google"><i class="fa fa-user"></i>Use Google account</a></div>
                                <input type="submit" value="login">
                                <div class="signup_link">Not a member?<a href="/signup">SignUp</a></div>
                            </form>
                        </div>
                    </div>

                </div>

            </div>

        </div>
    </div>

</section>

<%- include ('./partials/footerlogin') %> 